<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_head"
        android:layout_width="176dp"
        android:layout_height="172dp"
        android:layout_marginTop="128dp"
        android:src="@drawable/pic_personal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/topppicx" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/registered_ember"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/image_head"
        app:layout_constraintEnd_toEndOf="@+id/image_head"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/image_head" />

    <TextView
        android:id="@+id/tv_nick_signok"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/image_head"
        app:layout_constraintStart_toStartOf="@+id/image_head"
        app:layout_constraintTop_toBottomOf="@+id/image_head" />

    <TextView
        android:id="@+id/tv_name_signok"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/tv_nick_signok"
        app:layout_constraintStart_toStartOf="@+id/tv_nick_signok"
        app:layout_constraintTop_toBottomOf="@+id/tv_nick_signok" />

    <Button
        android:id="@+id/b_out"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:text="@string/logout"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_signok"
        app:layout_constraintStart_toStartOf="@+id/tv_name_signok"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_signok" />
</androidx.constraintlayout.widget.ConstraintLayout>